<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerPrograIV.GridPage"
             Title="GridPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Text="Next" HeightRequest="50" Clicked="Button_Clicked" Background="Red"></Button>


        <BoxView Color="Green" Grid.Row="0" Grid.Column="0" />
        <BoxView Color="Blue" Grid.Row="0" Grid.Column="1" />
        <BoxView Color="Aquamarine" Grid.Row="1" Grid.Column="0" />
        <BoxView Color="Purple" Grid.Row="1" Grid.Column="1" />


        <!--<Button Text="Next" Grid.Row="1" Grid.Column="1" 
                Clicked="Button_Clicked" BackgroundColor="Red" />-->
    </Grid>
</ContentPage>